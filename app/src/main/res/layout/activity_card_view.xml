<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/"
    tools:context=".ui.cards.CardView">

        <ImageView
            android:id="@+id/botellaCerveza"
            android:layout_width="76dp"
            android:layout_height="226dp"
            android:backgroundTint="#f7f7f7"
            android:scaleType="fitCenter"
            android:translationZ="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="290dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/botellabase" />

        <ImageView
            android:id="@+id/idMeGustaMinii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            android:layout_marginLeft="310dp"
            android:layout_marginBottom="120dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:srcCompat="@drawable/jarra1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardViewMini"
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:backgroundTint="#f7f7f7"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/idColorCabeceraMini"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/red"
                    android:orientation="horizontal"
                    android:paddingLeft="220dp">

                    <ImageView
                        android:id="@+id/idLogoCervezaMini"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:paddingRight="20dp"
                        app:srcCompat="@drawable/logobase" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/idImagenCervezaMini"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:elevation="15dp"
                        android:gravity="center">

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/idMeGustaMini"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/idTituloCervezaMini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/secular"
                            android:shadowColor="#7A7979"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="2"
                            android:text="Mahou cinco estrellas"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/idDescripcionCervezaMini"
                            android:layout_width="174dp"
                            android:layout_height="141dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/secular"
                            android:text="Mahou es una cerveza española de alta calidad con una larga historia y tradición. Es conocida por su sabor suave y equilibrado y su aroma fresco y cítrico. Es una cerveza popular en España y es ampliamente disponible en bares y tiendas."
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/idTipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/secular"
                            android:shadowRadius="2"
                            android:text="IPA"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/borde_linea"
                    android:backgroundTint="#DCDCDC"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/cerveza" />

                        <TextView
                            android:id="@+id/idTamanioCervezaMini"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:fontFamily="@font/secular"
                            android:gravity="center"
                            android:text="hola"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/precio" />

                        <TextView
                            android:id="@+id/idPrecioCervezaMini"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:fontFamily="@font/secular"
                            android:gravity="center"
                            android:text="hola"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/secular"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            app:srcCompat="@drawable/porcentaje" />

                        <TextView
                            android:id="@+id/idPorcentajeCervezaMini"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:fontFamily="@font/secular"
                            android:gravity="center"
                            android:text="hola"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>