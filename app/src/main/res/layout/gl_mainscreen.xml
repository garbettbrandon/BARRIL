<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color">

    <ImageView
        android:id="@+id/imagenCamara"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/scanner_imagen" />

    <Button
        android:id="@+id/idBuscar"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_above="@+id/listRecyclerView"
        android:layout_below="@+id/imagenCamara"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="106dp"
        android:backgroundTint="#C7501E"
        android:text="Buscar"
        android:textAlignment="textStart"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/idBotonSscan"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_above="@+id/listRecyclerView"
        android:layout_below="@+id/imagenCamara"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="206dp"
        android:backgroundTint="#C7501E"
        android:text="Scanear"
        android:textAlignment="textStart"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>