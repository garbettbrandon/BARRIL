        android:fontFamily="@font/secular"
        android:gravity="center"
        android:text="Ej: 40.010101  -3.0101010"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline19"
